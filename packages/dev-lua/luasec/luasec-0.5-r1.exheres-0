require github [ user=brunoos tag=${PNV} ] lua flag-o-matic

SUMMARY="OpenSSL library binding to provide TLS/SSL communication"
HOMEPAGE="https://github.com/brunoos/luasec"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-lang/lua:=[>=5.1]
        dev-libs/openssl
        dev-lua/luasocket
"

WORK=${WORKBASE}/${PN}-${PNV}

DEFAULT_SRC_COMPILE_PARAMS=( linux )

src_prepare() {
    lua_version
    append-flags -I /usr/include/lua${LUAVER}

    edo sed -i \
        -e "s;/lib;/${LIBDIR};"\
        Makefile

    edo cd src
    edo lua options.lua -g /usr/include/openssl/ssl.h > options.h
}

